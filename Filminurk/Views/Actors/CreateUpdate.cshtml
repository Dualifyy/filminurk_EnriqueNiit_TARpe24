@using Filminurk.Core.Domain
@model Filminurk.Models.Actors.ActorsCreateUpdateViewModel

@if (Model.ActorID.HasValue)
{
	<h1>Muuda näitleja andmed</h1>
}
else
{
	<h1>Lisa näitleja</h1>
}

<div>

	<form method="post" enctype="multipart/form-data">
		<input asp-for="ActorID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="NickName" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="MoviesActedFor" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">

				<select asp-for="MoviesActedFor" class="form-control" />
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="MostPopularMovie" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">

				<input asp-for="MostPopularMovie" class="form-control" />
				
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Age" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">

				<input asp-for="Age" class="form-control" />
				
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Nationality" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">

				<input asp-for="Nationality" class="form-control" />
				
			</div>
		</div>



		@if (Model.ActorID.HasValue)
		{
			<input asp-action="Update" asp-controller="Actors" type="submit" class="btn btn-primary" value="Muuda" />
		}
		else
		{
			<input asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary" value="Lisa" />
		}

		<a asp-action="Index" asp-controller="Actors" type="submit" class="btn btn-success">Tagasi loendisse</a>



	</form>
</div>