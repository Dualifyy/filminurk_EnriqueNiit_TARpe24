@using Filminurk.Core.Domain
@model Filminurk.Models.Movies.MoviesCreateUpdateViewModel

@if (Model.ID == Guid.Empty)
{
	<h1>Muuda Film</h1>
}
else
{
	<h1>Lisa Film</h1>
}
<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control"/>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Description" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstPublished" class="form-control"/>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Director" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CurrentRating" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="UserRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="UserRating" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="BuyPrice" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="BuyPrice" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="MovieLength" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MovieLength" class="form-control" />
			</div>
		</div>

		@if (Model.ID == Guid.Empty)
		{
			<input asp-for="EntryCreatedAt" type="hidden" />
			<input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create" />
		}
		else
		{

			<input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update" />
			<input asp-for="EntryModifiedAt" type="hidden" />
		}

	</form>
</div>